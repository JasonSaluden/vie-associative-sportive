{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1 class="mb-4">Liste des Clubs</h1>

    <div class="mb-3 text-end">
        <a href="{{ path('app_club_new') }}" class="btn btn-primary">Créer un nouveau club</a>
    </div>

      <div class="mb-3 text-end">
        <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Voir les équipes</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du Club</th>
                <th>Sport</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.nomClub }}</td>
                <td>{{ club.sportClub }}</td>
                <td>{{ club.adresseClub }}</td>
                <td>
                    <a href="{{ path('app_club_show', {'id': club.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun club trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mb-3">
        <a href="{{ path('app_licencie_index') }}" class="btn btn-secondary">Consulter la liste des licenciés</a>
    </div>
    
<a href="{{ path('app_club_new') }}" class="btn btn-primary">Créer un nouveau club</a>
{% endblock %}
